<div class='mt-4'>
    <h2>Đăng khóa học</h2>
    <form class='mt-4' method='POST' action='/course/store'>
        <div class='mb-3'>
            <label for='name' class='form-label'>tên khóa học</label>
            <input type='text' class='form-control' id='name' name='name' />
        </div>
        <div class='mb-3'>
            <label for='description' class='form-label'>mô tả khóa học</label>
            <textarea
                class='form-control'
                id='description'
                name='description'
            ></textarea>
        </div>
        <div class='mb-3'>
            <label for='videoId' class='form-label'>videoId</label>
            <input
                type='text'
                class='form-control'
                id='videoId'
                name='videoId'
            />
        </div>
        <button type='submit' class='btn btn-primary'>Đăng khóa học</button>
    </form>
</div>